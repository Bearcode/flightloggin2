#! /bin/bash

# only let thi script run on the development server (chris-comp), 
# otherwise it will clear the production database, and that would not be good

if [ $(hostname) != 'chris-comp' ]
then
    echo "not chris-comp";
    exit
fi

NEWEST=
for f in /srv/flightloggin/dumps/*.dump
do
    if [ -z "$NEWEST" ]
    then 
        NEWEST=$f
    elif [ "$f" -nt "$NEWEST" ] 
    then
        NEWEST=$f
    fi
done

echo "$NEWEST";
pg_restore "$NEWEST" --clean -U postgres -d logbook

exit
