<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" xmlns:gx="http://www.google.com/kml/ext/2.2" xmlns:kml="http://www.opengis.net/kml/2.2" xmlns:atom="http://www.w3.org/2005/Atom">
<Document>
	<name>{{title}}</name>

	<Style id="purple_line">
		<LineStyle>
			<color>ccFF78B4</color>{# B478FF #}
			<width>2</width>
		</LineStyle>
	</Style>
	
	<Style id="blue_line">
		<LineStyle>
			<color>ccF02814</color>{# 1428F0 #}
			<width>2</width>
		</LineStyle>
	</Style>
	
	<Style id="red_line">
		<LineStyle>
			<color>cc1400D2</color>{# D20014 #}
			<width>2</width>
		</LineStyle>
	</Style>
	
	<Style id="orange_line">
		<LineStyle>
			<color>cc14B1FF</color>{# FFB114 #}
			<width>2</width>
		</LineStyle>
	</Style>
	
	<Style id="green_line">
		<LineStyle>
			<color>cc14F000</color>{# 00F014 #}
			<width>2</width>
		</LineStyle>
	</Style>
	
	<Style id="icon">
		<IconStyle>
		    <color>ff0000ff</color>
			<scale>1.0</scale>
			<Icon>
				<href>files/icon.png</href>
			</Icon>
			<hotSpot x="0.5" y="0.5" xunits="fraction" yunits="fraction"/>
		</IconStyle>
	</Style>

{% for folder in folders %}	

    {% if folder.has_routes %}
        <Folder>
        <name>{{folder.name}}</name>
	        {% for route in folder %}
	        <Placemark>
		        <name>{{route.name}}</name>
		        <styleUrl>{{folder.style}}</styleUrl>
		        <LineString>
			        <tessellate>1</tessellate>		
			        <coordinates>
			        {{route.kml}}
			        </coordinates>
		        </LineString>
	        </Placemark>
	        {% endfor %}
	    </Folder>
    {% endif %}

    {% if folder.has_points %}
	<Folder>
	<name>{{folder.name}}</name>
        {% for point in folder %}
	    <Placemark>
		    <name>{{point.identifier}}</name>
		    <styleUrl>#icon</styleUrl>
		    <description>
		        <![CDATA[<b>{{point.name}}</b> <br>{{point.ls}}]]>
            </description>
		    <Point>
			    <coordinates>{{point.kml}}</coordinates>
		    </Point>
	    </Placemark>
	    {% endfor %}
	</Folder>
    {% endif %}
    
{% endfor %}
</Document>
</kml>
